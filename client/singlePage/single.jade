template(name='single')
    .container
        .page-header
            h1 {{doc.title}}
        .row
            .col-lg-4
                img(src=doc.image class='img-rounded')
                hr
                .panel.panel-default
                    .panel-heading Info
                    table(class='table')
                        tbody
                            tr
                                td Author ::
                                td some guy
                            tr
                                td Release Date::
                                td oct 43, 1022
                            

            .col-lg-8
                .panel.panel-default
                    .panel-heading Tags
                    .panel-body
                        each doc.tags
                            span(class='badge') {{this}}
                .panel.panel-default
                    .panel-heading Details
                    .panel-body {{{renderMarkdown doc.description}}}
                .panel.panel-default
                    .panel-heading BluePrint String
                        button(id='bluePrintBtn' class='btn btn-default' data-clipboard-text=doc.string) Copy To Clipboard
                    .panel-body  {{doc.string}}

